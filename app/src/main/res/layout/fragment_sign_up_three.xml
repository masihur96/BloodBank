<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_marginLeft="@dimen/_20sdp"
    tools:context=".SignUpTask.SignUpOne">



    <TextView
        android:id="@+id/titleTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="What is your Blood Group"
        android:textSize="@dimen/_40sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descriptionTV">


        <LinearLayout
            android:id="@+id/leayoutOne"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/oval_shap"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:text="A+"
                android:padding="@dimen/_10sdp"
                android:textSize="@dimen/_15sdp"
                android:gravity="center" />




            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="A-"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="B+"
                android:textSize="@dimen/_15sdp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/leayouttwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            android:gravity="center"
            android:layout_below="@id/leayoutOne"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/group_button_border"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:text="B-"
                android:textSize="@dimen/_15sdp"
                android:gravity="center" />




            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="O+"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="O-"
                android:textSize="@dimen/_15sdp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/leayouttwo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:padding="@dimen/_10sdp"
            android:weightSum="5"
            android:gravity="center"
            android:orientation="horizontal">



            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/group_button_border"
                android:textColor="@color/red"
                android:textAlignment="center"
                android:text="AB+"
                android:textSize="@dimen/_15sdp"
                android:gravity="center" />




            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:text="AB-"
                android:textSize="@dimen/_15sdp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/group_button_border"
                android:gravity="center"
                android:textColor="@color/red"
                android:text="B+"
                android:textSize="@dimen/_15sdp"/>

        </LinearLayout>




    </RelativeLayout>

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/groupLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextsignUpThree"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_10sdp"
        android:text=" Your blood group need to beprovite accurate if you don't know about it please contact nearest clinic."
        />


    <TextView
        android:id="@+id/nextsignUpThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:background="@drawable/next_button_design"
        android:text="Next"
        android:textSize="@dimen/_15sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>