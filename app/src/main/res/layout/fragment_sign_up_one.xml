<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".SignUpTask.SignUpOne">



        <TextView
            android:id="@+id/titleTV"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let Us Know About You"
            android:textSize="@dimen/_40sdp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/titleTV"
            app:layout_constraintTop_toTopOf="@id/userNameCardView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Username"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/black"
           />

        <androidx.cardview.widget.CardView
            android:id="@+id/userNameCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/usernameTV"
            app:layout_constraintTop_toTopOf="@id/emailTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/button_background"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/nameET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/emailTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/userNameCardView"
            app:layout_constraintTop_toTopOf="@id/emailCardView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Email"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
        />

        <androidx.cardview.widget.CardView
            android:id="@+id/emailCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/emailTV"
            app:layout_constraintTop_toTopOf="@id/passwordTV"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/button_background"
           >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                       />

                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/passwordTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/emailCardView"
            app:layout_constraintTop_toTopOf="@id/paaworsCV"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Password"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/black"
            android:layout_below="@id/emailCardView"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/paaworsCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/passwordTV"
            app:layout_constraintTop_toTopOf="@id/descriptionTV"
            app:cardCornerRadius="@dimen/_20sdp"
            android:backgroundTint="@color/button_background"
            android:layout_below="@id/passwordTV">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                       />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/descriptionTV"
            android:layout_below="@id/paaworsCV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/paaworsCV"
            app:layout_constraintTop_toTopOf="@id/nextsignUpOne"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:padding="@dimen/_10sdp"
            android:text="Provide your real name for your identity. your name will be used for search"
            />


                <Button
                    android:id="@+id/nextsignUpOne"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/red"
                    android:textAllCaps="false"
                    android:textSize="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:text="Next"/>


</androidx.constraintlayout.widget.ConstraintLayout>