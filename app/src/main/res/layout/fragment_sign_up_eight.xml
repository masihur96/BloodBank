<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".SignUpTask.SignUpOne">



    <TextView
        android:id="@+id/titleTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You're almost done"
        android:textSize="@dimen/_40sdp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/titleTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/descriptionTV">




            <ImageView
                android:id="@+id/weightDown"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/upload_photo"/>



    </RelativeLayout>

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/groupLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/nextsignUpEight"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_10sdp"
        android:text="Please do not use a model or doll avatar . Please keep faith on yourself you're beautiful too"
        />


    <Button
        android:id="@+id/nextsignUpEight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/red"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sdp"
        android:padding="@dimen/_5sdp"
        android:text="Next"/>


</androidx.constraintlayout.widget.ConstraintLayout>