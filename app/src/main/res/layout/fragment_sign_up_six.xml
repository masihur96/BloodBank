<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="@dimen/_25sdp"
    android:layout_marginLeft="@dimen/_25sdp"
    tools:context=".SignUpTask.SignUpOne">



    <TextView
        android:id="@+id/titleTV"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/streetAddressTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Where Do You Live"
        android:textSize="@dimen/_40sdp"
        android:textColor="@color/black"
      />

    <TextView
        android:id="@+id/streetAddressTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTV"
        android:text="Street Address"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_20sdp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/streetAddressET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streetAddressTV"
        android:background="@drawable/eddit_text_background"
        android:padding="@dimen/_20sdp"
        android:hint="Dhaka"/>

    <TextView
        android:id="@+id/cityTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/streetAddressET"
        android:text="City"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/cityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cityTV"
        android:background="@drawable/eddit_text_background"
        android:hint="Jhone"
        android:padding="@dimen/_20sdp"
        />

    <TextView
        android:id="@+id/postalCodeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_below="@id/cityET"
        android:text="Postal Code"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_18sdp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/postalCodeET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postalCodeTV"
        android:background="@drawable/eddit_text_background"
        android:hint="Jhone"
        android:padding="@dimen/_20sdp"
        />

    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postalCodeET"
        android:gravity="center"
        android:textSize="@dimen/_16sdp"
        android:padding="@dimen/_10sdp"
        android:text="Provide your real name for your identity. your name will be used for search"
        />


    <Button
        android:id="@+id/nextsignUpSix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTV"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:textColor="@color/white"
        android:background="@drawable/next_button_design"
        android:text="Next"
        android:textSize="@dimen/_15sdp"/>

</RelativeLayout>